@model Dieboldpruebas.Models.Lugar.ClsLugar

@{
    ViewBag.Title = "";
}

<h2>Crear nuevo lugar</h2>
<form method="post" action="~/Lugar/Guardar">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Lugar</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.nombrelugar, htmlAttributes: new { @class = "form-control" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.nombrelugar, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.nombrelugar, "digite un nombre", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Crear lugar" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
</form>
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
